<div class="register-form-container">
    <h1 class="register-form-title"><%= title %></h1>
  
    <!-- Flash messages -->
    <%- messages() %>

    <!-- Registration Form -->
    <form action="/account/register" method="POST">
      <label for="first-name" class="register-form-label">First Name:</label>
      <input type="text" id="first-name" name="account_firstname" required data-trail>
  
      <label for="last-name" class="register-form-label">Last Name:</label>
      <input type="text" id="last-name" name="account_lastname" required data-trail>
  
      <label for="email" class="register-form-label">Email:</label>
      <input type="email" id="email" name="account_email" required data-trail>
  
      <label for="password" class="register-form-label">Password:</label>
      <input type="password" id="password" name="account_password" required data-trail>
  
      <p class="password-requirements">
        Password must be at least 12 characters long, contain at least 1 capital letter, 1 number, and 1 special character.
      </p>
  
      <button type="submit" class="register-form-button">Register</button>
    </form>
  
    <p class="register-form-link">Already have an account? <a href="/account/login">Login</a></p>
  </div>
  