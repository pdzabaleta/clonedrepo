<h1 class="page-title"><%= title %></h1>

<!-- Flash messages -->
<%- messages() %>

<!-- Login Form -->
<form class="login-form" action="/account/login" method="POST">
  <label for="email" class="form-label">Email:</label>
  <input type="email" id="email" name="account_email" class="form-input" required>

  <label for="password" class="form-label">Password:</label>
  <input type="password" id="password" name="account_password" class="form-input" required>

  <button type="submit" class="form-button">Login</button>
</form>

<p class="signup-link">No account? <a href="/account/register">Sign-up</a></p>
